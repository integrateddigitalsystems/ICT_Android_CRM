<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- new row -->

        <TextView
            style="@style/tableRowTitle"
            android:layout_width="match_parent"
            android:background="@color/gray_light"
            android:padding="15dp"
            android:gravity="center"
            android:id="@+id/header"
            android:text="@string/thanks_speedtest"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/sumdownloadtxt"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/download_speed"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dowload_speed_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="kjh"
                android:textColor="@color/black" />

        </RelativeLayout>
        <!-- new row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/sumuploadtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/upload_speed"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/upload_speed_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black" />

        </RelativeLayout>
        <!-- new row -->

        <!-- new row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/experiencetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/experience3"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/experience_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black" />

        </RelativeLayout>


        <!-- new row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/ispText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/isp"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/isp_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black" />

        </RelativeLayout>


        <!-- new row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/connectiontxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/connection_type"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/connection_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black" />

        </RelativeLayout>

        <!-- new row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/commenttxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/comment"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/comment_summary"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_below="@+id/commenttxt2"
                android:textColor="@color/black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!-- new row -->
        <LinearLayout
            android:id="@+id/submit_cancel_row"
            style="@style/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/submit"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bordo"
                android:clipToPadding="false"
                android:elevation="8dp"
                android:gravity="center"
                android:onClick="submit"
                android:padding="10dp"
                android:text="@string/agree"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/back_to_form"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:onClick="submit"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <!-- new row -->
        <LinearLayout
            android:id="@+id/share_test_row"
            style="@style/tableRow"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <Button
                    android:id="@+id/repeat_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_bordo"
                    android:clipToPadding="false"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:elevation="8dp"
                    android:onClick="submit"
                    android:padding="10dp"
                    android:text="@string/repeat_test"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">


                <Button
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bordo"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:clipToPadding="false"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:onClick="submit"
                    android:padding="10dp"
                    android:text="@string/share"
                    android:drawableTint="@color/white"
                    android:drawableEnd="@drawable/share"
                    android:textColor="@color/white" />



                <RelativeLayout
                    android:id="@+id/shares"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button"
                    android:onClick="submit">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/share"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="25dp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"/>



                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>