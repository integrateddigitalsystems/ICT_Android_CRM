<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerMainSC"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:background="#E6E8E8">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".4"
        android:background="@color/bordo"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/regInf"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="center">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/registerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:text="@string/registrationText"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow411"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05">

            <TextView
                android:id="@+id/textView2110"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mobileText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:layout_weight="1.87"
                    android:paddingRight="10dp"
                    android:text="@string/mobileNum"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.05">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:focusable="false"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_bg"
                android:focusableInTouchMode="false"
                android:inputType="phone"
                android:text="+974"
                android:textSize="13sp">

                <requestFocus />
            </EditText>

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:visibility="gone"
                android:layout_height="0px" />
            <EditText
                android:id="@+id/number_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:maxLength="8"
                android:padding="10dp"

                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold">
                <requestFocus/>
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tabeleRow411"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05">

            <TextView
                android:id="@+id/textVitew2110"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.28"
                    android:paddingRight="10dp"
                    android:text="@string/emailOpt"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05">

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/tabledf"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.08">

            <TextView
                android:id="@+id/textVrt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/nosimcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cont_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"

        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="No sim card"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:visibility="gone" />



    <RelativeLayout
        android:id="@+id/continuelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_below="@+id/table"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/cont_button2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="15dp"
            android:paddingRight="18dp"
            android:text="@string/failedbutton"
            android:textColor="@color/white" />
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/cont_button"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/continuelayout"
        android:layout_centerInParent="true"
        android:background="@drawable/button_bordo"
        android:layout_gravity="center_horizontal"
        android:text="@string/failedbutton"
        android:clipToPadding="false"
        android:elevation="12dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/progressBarLayout"
        android:layout_below="@+id/cont_button"
        android:layout_centerInParent="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressBar"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/gray"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>