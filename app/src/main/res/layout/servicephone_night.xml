<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1A2246"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/imgback"
        android:src="@drawable/bg_night" />

    <com.ids.ict.animation.HorizantalAnimatedImageView
        android:id="@+id/imgBg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_colors_night" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:paddingBottom="1dp"
        android:paddingRight="9dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_yellow" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/logotxt"
        android:src="@drawable/logo_text_nt" />

    <com.ids.ict.animation.PeekThroughImageView
        android:id="@+id/lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="13dp"
        android:layout_margin="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lines" />

    <ImageView
        android:id="@+id/mainbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/top_nt" />

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mainbar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:id="@+id/llNetwork"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/networkImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/network_nt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:id="@+id/llSpeed"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/speedImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/speed_test_nt" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/llNetwork"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ntfImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:src="@drawable/notification_nt" />

            <ImageView
                android:id="@+id/aboutImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:src="@drawable/about_us_nt" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llNetwork"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/compImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="false"
                android:layout_gravity="center_vertical"
                android:src="@drawable/complaint_nt" />

            <ImageView
                android:id="@+id/guidImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="false"
                android:layout_gravity="center_vertical"
                android:src="@drawable/guide_nt" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="aaa"
        android:background="@color/bordo"/>
    <include
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/menu_footer_new" />

</RelativeLayout>