                android:gravity="right"
                android:padding="10dp"
                android:background="@color/transparent"
                android:ems="10"
                android:hint="@string/enter_pass"
                android:inputType="textPassword"
                android:textSize="13sp"
                android:textStyle="bold"/>


        </LinearLayout>


