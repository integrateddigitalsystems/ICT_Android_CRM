<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_light"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- new row -->
            <TextView
                style="@style/tableRowTitle"
                android:padding="15dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/thanks_speedtest"
                android:id="@+id/textView" />
            <!-- new row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:id="@+id/sumdownloadtxt"
                    android:layout_alignParentRight="true"
                    android:text="@string/download_speed" />

                <TextView
                    android:id="@+id/dowload_speed_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="kjh" />

            </RelativeLayout>
            <!-- new row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/sumuploadtxt"
                    android:text="@string/upload_speed" />

                <TextView
                    android:id="@+id/upload_speed_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>
            <!-- new row -->

            <!-- new row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/experience_summary"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/experiencetxt"
                    android:layout_centerVertical="true"
                    android:text="@string/experience3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <!-- new row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/isp_summary"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/ispText"
                    android:layout_centerVertical="true"
                    android:text="@string/isp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <!-- new row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/connection_summary"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/connectiontxt"
                    android:layout_centerVertical="true"
                    android:text="@string/connection_type"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!-- new row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:id="@+id/commenttxt2"
                    android:text="@string/comment" />

                <TextView
                    android:id="@+id/comment_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/commenttxt2"
                    android:textColor="@color/black"  />

            </RelativeLayout>

        </LinearLayout>




        <!-- new row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_light">


            <LinearLayout
                android:id="@+id/submit_cancel_row"
                android:background="@color/white"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">


                <Button
                    android:id="@+id/submit"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_bordo"
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:elevation="8dp"
                    android:padding="10dp"
                    android:onClick="submit"
                    android:text="@string/submit"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/back_to_form"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="18dp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:visibility="gone"
                    android:onClick="submit"

                    android:text="@string/cancel"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/share_test_row"
                style="@style/tableRow"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:visibility="gone">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bordo"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:elevation="8dp"
                        android:onClick="submit"
                        android:padding="10dp"
                        android:text="@string/share"
                        android:drawableTint="@color/white"
                        android:drawableStart="@drawable/share"
                        android:textColor="@color/white" />

                    <RelativeLayout
                        android:id="@+id/shares"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button"
                        android:onClick="submit">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/share"
                            android:paddingStart="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:paddingEnd="18dp"
                            android:paddingBottom="25dp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/share"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:paddingStart="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="22dp"
                            android:tint="@color/white"
                            />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">


                    <Button
                        android:id="@+id/repeat_test"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:clipToPadding="false"
                        android:elevation="8dp"
                        android:background="@drawable/button_bordo"
                        android:gravity="center"
                        android:onClick="submit"
                        android:padding="10dp"
                        android:text="@string/repeat_test"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>